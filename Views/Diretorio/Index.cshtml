@model IEnumerable<saturnApp.Models.Diretorio>
@using saturnApp.Models

@{
    ViewData["Title"] = "Index";
    var currentDir = (Diretorio)ViewData["currentDir"];
    var arquivos = (List<Arquivo>)ViewData["arquivos"];
    var diretorios = (List<Diretorio>)ViewData["diretorios"];
}

<h2>Index</h2>

<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalNovoDiretorio">
  Novo Diretorio
</button>
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalNovoArquivo">
  Novo Arquivo
</button>

<p>
    <a asp-action="Create" asp-route-id="@currentDir.Id">Novo Diretorio</a>  |
    <a asp-controller="Arquivo" asp-action="Create" asp-route-id="@currentDir.Id">Novo Arquivo</a>

</p>

<div class="row">
    <!-- IR PARA O PUAI -->
    @if (currentDir.PaiId != null) {    
        <div class="col-lg-2 col-md-3 col-sm-4 col-xs-6">
            <div class="card text-center">
                <a asp-action="Index" asp-route-id="@currentDir.PaiId">
                    <img class="card-img-top icon" src="~/icons/upper-folder.svg" alt="Card image cap">
                    <div class="card-body nome">..</div>
                </a>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-4">
                            <a class="text-muted"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                        </div>
                        <div class="col-4">                        
                            <a class="text-muted"><i class="fa fa-search" aria-hidden="true"></i></a>
                        </div>
                        <div class="col-4">                                                
                            <a class="text-muted"><i class="fa fa-trash" aria-hidden="true"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    <!-- DIRETORIOS -->
    @foreach (var item in diretorios) {
        <div class="col-lg-2 col-md-3 col-sm-4 col-xs-6">
            <div class="card text-center">
                <a asp-action="Index" asp-route-id="@item.Id">
                    <img class="card-img-top icon" src="~/icons/folder.svg" alt="Card image cap">
                    <div class="card-body nome">@Html.DisplayFor(modelItem => item.Nome)
                    </div>
                </a>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-4">
                            <a class="text-muted" asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                        </div>
                        <div class="col-4">                        
                            <a class="text-muted" asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-search" aria-hidden="true"></i></a>
                        </div>
                        <div class="col-4">                                                
                            <a class="text-muted" asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash" aria-hidden="true"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- ARQUIVOS -->
    @foreach (var item in arquivos) {
        <div class="col-lg-2 col-md-3 col-sm-4 col-xs-6">
            <div class="card text-center">
                <a asp-controller="Arquivo" asp-action="Download" asp-route-id="@item.Id">
                    <img class="card-img-top icon" src="~/icons/file.svg" alt="Card image cap">
                    <div class="card-body nome">@Html.DisplayFor(modelItem => item.Nome)</div>
                </a>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-4">
                            <a asp-controller="Arquivo" class="text-muted" asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                        </div>
                        <div class="col-4">                        
                            <a asp-controller="Arquivo" class="text-muted" asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-search" aria-hidden="true"></i></a>
                        </div>
                        <div class="col-4">                                                
                            <a asp-controller="Arquivo" class="text-muted" asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash" aria-hidden="true"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Nova Pasta -->
<div class="modal fade" id="modalNovoDiretorio" tabindex="-1" role="dialog" aria-labelledby="modalNovoDiretorioLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalNovoDiretorioLabel">Nova Pasta</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Nome" class="control-label"></label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <input type="hidden" value="@ViewBag.PaiId" asp-for="PaiId" />
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </form>            
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

@await Html.PartialAsync("_ModalNovoArquivo")




